{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Run FastAPI (Uvicorn)",
      "type": "python",
      "request": "launch",
      "module": "uvicorn",
      "args": [
        "app.main:app",     // module:app path
        "--reload",         // auto-reload on changes
        "--host", "0.0.0.0",
        "--port", "8000"
      ],
      "jinja": true,
      "console": "integratedTerminal"
    }
  ]
}
